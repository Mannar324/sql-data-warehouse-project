/*
    Script Purpose:
    - Create the DataWarehouse database if it does not already exist
    - Create three schemas: bronze, silver, and gold
*/

-- Create database if it doesn't exist
IF NOT EXISTS (SELECT * FROM sys.databases WHERE name = 'DataWarehouse')
BEGIN
    CREATE DATABASE DataWarehouse;
END
GO

-- Switch to the DataWarehouse database
USE DataWarehouse;
GO

-- Create Schemas
IF NOT EXISTS (SELECT * FROM sys.schemas WHERE name = 'bronze')
    CREATE SCHEMA bronze;
GO

IF NOT EXISTS (SELECT * FROM sys.schemas WHERE name = 'silver')
    CREATE SCHEMA silver;
GO

IF NOT EXISTS (SELECT * FROM sys.schemas WHERE name = 'gold')
    CREATE SCHEMA gold;
GO
